            <input type="text" placeholder="Location">
            <button type="submit">Search</button>
        </form>
        <div>
            <p id="error"></p>
            <p id="location"></p>
            <p id="forecastData"></p>
        </div>
    </div>
    {{>footer}}
    <script src="/js/app.js"></script>
</body>

</html>